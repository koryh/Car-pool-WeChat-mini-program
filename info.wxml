<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__hd">
  </view>
  <view class="page__bd">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>

    <view class="weui-cells__title">个人信息</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">默认地址</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入地址"bindinput="bindKeyInput2" value="{{inputValue2}}" />
        </view>
      </view>

      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">手机号</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入手机号"bindinput="bindKeyInput" value="{{inputValue}}"/>
        </view>
      </view>
    </view>
    <view class="weui-btn-area">
        <button class="weui-btn" bindtap="addbtn" >确定保存</button>
    </view>

    <view class="weui-cells__tips">我们不会使用您的个人信息</view>
  </view>
</view>